<div class="container mx-auto p-4 max-w-3xl">
  <div class="bg-white shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Detalhes do Ônibus</h1>

    <div class="bg-gray-50 p-6 rounded-lg shadow-inner mb-6">
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2 text-gray-700">Informações Gerais</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
        <p>
          <strong class="text-gray-800">Número do Ônibus:</strong>
          <%= @onibus.numero_onibus %>
        </p>
        <p>
          <strong class="text-gray-800">Capacidade Máxima:</strong>
          <%= @onibus.capacidade_maxima %>
        </p>
        <p>
          <strong class="text-gray-800">Modelo:</strong>
          <%= @onibus.modelo.nome %>
          (<%= @onibus.modelo.fabricante %>)
        </p>
      </div>
    </div>

    <div class="bg-gray-50 p-6 rounded-lg shadow-inner mb-6">
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2 text-gray-700">Rotas Associadas</h2>
      <% if @onibus.rotas.any? %>
        <div class="space-y-4">
          <% @onibus.rotas.each do |rota| %>
            <div class="bg-white p-4 rounded-md border border-gray-200 shadow-sm">
              <p>
                <strong class="text-gray-800">Origem:</strong>
                <%= rota.municipio_origem.nome %>
              </p>
              <p>
                <strong class="text-gray-800">Destino:</strong>
                <%= rota.municipio_destino.nome %>
              </p>
              <p>
                <strong class="text-gray-800">Horário de Saída:</strong>
                <%= rota.horario_saida.strftime("%H:%M") %>
              </p>
              <p>
                <strong class="text-gray-800">Horário de Chegada:</strong>
                <%= rota.horario_chegada.strftime("%H:%M") %>
              </p>
              <p>
                <strong class="text-gray-800">Dias da Semana:</strong>
                <%= rota.dias_da_semana %>
              </p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 italic">Nenhuma rota associada a este ônibus.</p>
      <% end %>
    </div>

    <div class="flex justify-between items-center mt-6">
      <%= link_to 'Editar', edit_onibus_path(@onibus), class: 'px-6 py-3 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700 transition' %>
      <%= link_to 'Voltar', onibuses_path, class: 'px-6 py-3 bg-gray-200 text-gray-800 font-medium rounded-md hover:bg-gray-300 transition' %>
      <%= button_to 'Apagar', onibus_path(@onibus), method: :delete, data: { confirm: 'Tem certeza que deseja apagar este ônibus?' }, class: 'px-6 py-3 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 transition' %>
    </div>
  </div>
</div>
